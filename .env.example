# Production Environment Template
# Copy this to .env and configure for your production environment

# Database Configuration (CHANGE THIS!)
DATABASE_URL=postgresql://contacat_user:CHANGE_THIS_PASSWORD@localhost/contacat_prod
# For development/testing with SQLite:
# DATABASE_URL=sqlite:///./erp.db

# Security (GENERATE A SECURE KEY!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_32_CHARACTER_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
ENVIRONMENT=production
DEBUG=False

# CORS Configuration (if needed)
# CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/contacat/app.log

# File Upload Limits
MAX_UPLOAD_SIZE_MB=10

# Email Configuration (optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@your-domain.com

# Backup Configuration
# BACKUP_DIR=/var/backups/contacat
# BACKUP_RETENTION_DAYS=30
